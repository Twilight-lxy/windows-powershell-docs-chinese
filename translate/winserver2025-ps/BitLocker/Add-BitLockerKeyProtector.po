msgid "# Add-BitLockerKeyProtector"
msgstr "# Add-BitLockerKeyProtector"

msgid "## SYNOPSIS"
msgstr "## 概述"

msgid "Adds a key protector for a BitLocker volume."
msgstr "为 BitLocker 卷添加一个密钥保护器。"

msgid "## SYNTAX"
msgstr "## 语法（Syntax）"

msgid "### PasswordProtector"
msgstr "### PasswordProtector"

msgid "### RecoveryPasswordProtector"
msgstr "### RecoveryPasswordProtector"

msgid "### StartupKeyProtector"
msgstr "### StartupKeyProtector"

msgid "### TpmAndStartupKeyProtector"
msgstr "### TpmAndStartupKeyProtector"

msgid "### TpmAndPinAndStartupKeyProtector"
msgstr "### TpmAndPinAndStartupKeyProtector"

msgid "### SidProtector"
msgstr "### SidProtector"

msgid "### TpmAndPinProtector"
msgstr "### TpmAndPinProtector"

msgid "### TpmProtector"
msgstr "### TpmProtector"

